                  <tgroup cols="2">
                     <colspec colnum="1" colwidth="1*"/>
                     <colspec colnum="2" colwidth="3.5*"/>
                     <thead>
                        <row>
                           <entry>Source</entry>
                           <entry>URL</entry>
                        </row>
                     </thead>
                     <tbody>
                        <row>
                           <entry>upstream</entry>
                           <entry><ulink url="http://www.python.org"/></entry>
                        </row>
                        <row>
                           <entry>Debian</entry>
                           <entry><ulink url="http://packages.debian.org/stable/python/python2.5"/></entry>
                        </row>
                        <row>
                           <entry>Gentoo</entry>
                           <entry><ulink url="http://packages.gentoo.org/packages/?category=dev-lang;name=python;"/></entry>
                        </row>
                        <row>
